{
    "manifest_version": 2,

    "name": "Ubiq",
    "description": "Puts that over there.",
    "version": "0.1",

    "permissions": [
        "contextMenus"
    ],
     "web_accessible_resources": [
        "icon.png"
     ],

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["socket.io.min.js", "background.js"]
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "css": ["discover.css"],
        "js": ["discover.js"]
    }]
}
