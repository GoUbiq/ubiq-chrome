{
    "manifest_version": 2,

    "name": "Ubiq",
    "description": "Puts that over there.",
    "version": "0.1",

    "permissions": [
        "contextMenus"
    ],

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "css": [],
        "js": ["discover.js"]
    }]
}
